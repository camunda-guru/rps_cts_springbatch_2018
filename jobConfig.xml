<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:batch="http://www.springframework.org/schema/batch" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/batch   
 http://www.springframework.org/schema/batch/spring-batch-2.2.xsd   
 http://www.springframework.org/schema/beans    
 http://www.springframework.org/schema/beans/spring-beans-3.2.xsd  ">
    <import resource="context.xml" />      
   <!-- Defining a bean --> 
   <bean id = "pretasklet" class = "com.cts.banking.tasklets.CustomTasklet" >
   <property name="message" value="CTS Pune Team!"/>
   </bean>  
   <bean id = "posttasklet" class = "com.cts.banking.tasklets.CustomTasklet" >
   <property name="message" value="Got the concept!"/>
   </bean>  
   <!-- Defining a job--> 
   <batch:job id = "firstJob">  
      <!-- Defining a Step --> 
      <batch:step id = "step1" next="step2"> 
         <tasklet ref = "pretasklet"/>   
      </batch:step> 
       <batch:step id = "step2" > 
         <tasklet ref = "posttasklet"/>   
      </batch:step>    
   </batch:job>  
</beans>